<h1>New Person</h1>

<%= form_tag('/persons/create', method: 'post') do %>

  <%= radio_button_tag(:person, 'actor', :role) %>
  <%= label_tag(:person, "Actor") %>
  <%= radio_button_tag(:person, 'director', :role) %>
  <%= label_tag(:person, 'Director') %><br>

  <%= label_tag(:person, 'First_Name') %><br>
  <%= text_field(:person, :first_name) %><br><br>
  <%= label_tag(:person, 'Last_Name') %><br>
  <%= text_field(:person, :last_name) %><br><br>
  <%= label_tag(:person, 'Date of Birth') %><br>
  <%= date_field(:person, :birth_date) %><br><br>
  <%= label_tag(:person, 'Description') %><br>
  <%= text_area(:person, :description) %><br><br>

  <%= submit_tag("Create") %>


<% end %>

<%= link_to 'Back', :back %>